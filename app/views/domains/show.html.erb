<% provide(:title, @domain.dname + ' ' + @domain.dip) %>
		
		
		
	<!--	<div class="am-g">-->
		<!-- ============================================================== -->
		<!-- Start right Content here -->
		<div class="content-page">
        <%= render 'shared/error_messages', object: @subdomain %>
        <% flash.each do |message_type, message| %>
            <div class="am-alert am-alert-<%= message_type %>" data-am-alert>
                <button type="button" class="am-close">&times;</button>
                <p><%= message %></p>
            </div>
        <% end %>
			<!-- Start content -->
			<div class="content">
				<div class="card-box">
					<!-- Row start -->
					<div class="am-g">
						<div class="am-u-sm-12 am-u-md-6">
				          <div class="am-btn-toolbar">
				            <div class="am-btn-group am-btn-group-xs">
				              <button type="button" class="am-btn am-btn-default" data-am-modal="{target: '#form-modal', closeViaDimmer: 0, width: 650, height: 250}"><span class="am-icon-plus"></span> 新增</button>
				              <button type="button" class="am-btn am-btn-default" data-am-modal="{target: '#form-file-modal', closeViaDimmer: 0, width: 650, height: 200}"><span class="am-icon-file"></span> 导入</button>
							
							  <button type="button" class="am-btn am-btn-default" onclick="javascript:location.href='/dexport/<%= @domain.id %>'"><span class="am-icon-archive"></span> 导出</button>
				              
				            </div>
				          </div>
				        </div>	
				        


                        <div class="am-modal am-modal-no-btn" tabindex="-1" id="form-file-modal">
                            <div class="am-modal-dialog">
                                <div class="am-modal-hd">导入子域名列表
                                <a href="javascript: void(0)" class="am-close am-close-spin" data-am-modal-close>&times;</a>
                                </div>
                                <div class="am-modal-bd">
                                   <form class="am-form am-form-horizontal" action="/dimport" method="post" enctype="multipart/form-data">
                                   <input name="authenticity_token" type="hidden" value=<%= form_authenticity_token  %> />
                                   <input name="domain_id" type="hidden" value=<%= @domain.id %> />
                                        <div class="am-form-group am-form-file">
											<button type="button" class="am-btn am-btn-default am-btn-sm">
												<i class="am-icon-cloud-upload"></i> 选择要上传的文件</button>
											<input type="file" id="doc-form-file" name="file" multiple="multiple">
										</div>
											<div id="file-list"></div>
											<script>
											$(function() {
												$('#doc-form-file').on('change', function() {
												var fileNames = '';
												$.each(this.files, function() {
													fileNames += '<span class="am-badge">' + this.name + '</span> ';
												});
												$('#file-list').html(fileNames);
												});
											});
											</script>
                                            <div class="am-u-sm-6 am-u-sm-offset-3">
                                            <button type="submit" class="am-btn am-btn-default">提交</button>
                                            </div>
                                    </form>
                                </div>
                            </div>
                        </div>


                        <div class="am-modal am-modal-no-btn" tabindex="-1" id="form-modal">
                            <div class="am-modal-dialog">
                                <div class="am-modal-hd">New Domain
                                <a href="javascript: void(0)" class="am-close am-close-spin" data-am-modal-close>&times;</a>
                                </div>
                                <div class="am-modal-bd">
                                   <form class="am-form am-form-horizontal" action="/sub_domains" method="post">
                                   <input name="authenticity_token" type="hidden" value=<%= form_authenticity_token  %> />
                                   <input name="domain_id" type="hidden" value=<%= @domain.id %> />
                                        <div class="am-form-group">
                                            <label for="doc-ipt-3" class="am-u-sm-2 am-form-label">子域名</label>
                                            <div class="am-u-sm-10">
                                            <input type="text" name="sub_domain[sname]" id="doc-ipt-3" placeholder="输入你的子域名">
                                            </div>
                                        </div>

                                        <div class="am-form-group">
                                            <label for="doc-ipt-2" class="am-u-sm-2 am-form-label">子域名IP</label>
                                            <div class="am-u-sm-10">
                                            <input type="text" name="sub_domain[sip]" id="doc-ipt-2" placeholder="输入你的子域名IP">
                                            </div>
                                        </div>

                                            <div class="am-u-sm-6 am-u-sm-offset-3">
                                            <button type="submit" class="am-btn am-btn-default">提交</button>
                                            </div>
                                    </form>
                                </div>
                            </div>
                        </div>

						<div class="am-u-sm-12 am-u-md-3">
				          <div class="am-input-group am-input-group-sm">
				            <input type="text" class="am-form-field">
				          <span class="am-input-group-btn">
				            <button class="am-btn am-btn-default" type="button">搜索</button>
				          </span>
				          </div>
				        </div>
				      </div>
					  <!-- Row end -->
					  
					  <!-- Row start -->
					  	<div class="am-g">
        <div class="am-u-sm-12">
          <form class="am-form">
            <table class="am-table am-table-striped am-table-hover table-main">
              <thead>
              <tr>
                <th class="table-id">ID</th><th class="table-type">域名</th><th class="table-author am-hide-sm-only">IP</th><th class="table-date am-hide-sm-only">修改日期</th><th class="table-set">操作</th>
              </tr>
              </thead>
              <tbody>

                <% @subdomains.each do |subdomain| %>
                    <tr>
                    <td><%= subdomain.id %></td>
                    <td><%= subdomain.sname %></td>
                    <td class="am-hide-sm-only"><%= subdomain.sip %></td>
                    <td class="am-hide-sm-only"><%= subdomain.updated_at %></td>
                    <td>
                        <div class="am-btn-toolbar">
                        <div class="am-btn-group am-btn-group-xs">
                        <%= link_to edit_sub_domain_path(subdomain) do %>
                            <button class="am-btn am-btn-default am-btn-xs am-text-secondary"><span class="am-icon-pencil-square-o"></span> 编辑</button>
                        <% end %>
                            <button class="am-btn am-btn-default am-btn-xs am-hide-sm-only"><span class="am-icon-copy"></span> 复制</button>
                            <%= link_to subdomain, method: :delete, data: { confirm: "ARE YOU OK?" } do %>
                            <button class="am-btn am-btn-default am-btn-xs am-text-danger am-hide-sm-only"><span class="am-icon-trash-o"></span> 删除</button>
                            <% end %>
                        </div>
                        </div>
                    </td>
                    </tr>
                <% end %>
              
              </tbody>
            </table>
            <div class="am-cf">
                共 <%= @count %> 条记录
                <div class="am-fr">
                    <%= will_paginate @subdomains, :class => "flickr_pagination", :container => "flase", :previous_label => '上一页', :next_label => '下一页' %>
                </div>
            </div>
            <hr />
            <p>注：.....</p>
          </form>
        </div>

      </div>
					  <!-- Row end -->
					  
					</div>
				
				
				
				
				</div>
			

			</div>
		</div>
		<!-- end right Content here -->
